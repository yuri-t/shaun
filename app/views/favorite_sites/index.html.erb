<h1>Listing favorite_sites</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @favorite_sites.each do |favorite_site| %>
      <tr>
        <td><%= link_to 'Show', favorite_site %></td>
        <td><%= link_to 'Edit', edit_favorite_site_path(favorite_site) %></td>
        <td><%= link_to 'Destroy', favorite_site, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

